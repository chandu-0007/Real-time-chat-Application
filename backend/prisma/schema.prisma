generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  username    String       @unique
  passwordHash String
  createdAt   DateTime     @default(now())
  messages    Message[]
  rooms       Room[]       @relation("RoomCreated")
  roomMembers RoomMember[]
}

model Room {
  id          Int          @id @default(autoincrement())
  roomName      String
  createdBy   Int
  createdAt   DateTime     @default(now())
  creator     User         @relation("RoomCreated", fields: [createdBy], references: [id])
  messages    Message[]
  roomMembers RoomMember[]
}

model Message {
  id        Int      @id @default(autoincrement())
  userId    Int
  roomId    Int
  message   String
  user      User     @relation(fields: [userId], references: [id])
  room      Room     @relation(fields: [roomId], references: [id] , onDelete: Cascade)
  createdAt DateTime @default(now())
}

model RoomMember {
  id        Int      @id @default(autoincrement())
  roomId    Int
  userId    Int
  joinedAt  DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  room      Room     @relation(fields: [roomId], references: [id] , onDelete: Cascade)

  @@unique([userId, roomId])
}
